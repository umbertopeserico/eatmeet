<%= form_for([:administrator, @event], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-7">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :schedule, class: "col-sm-2 control-label" %>
    <div class="col-sm-7">
      <%= f.datetime_select :schedule, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :menu_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-7">
      <%= f.select :menu_id, options_for_select(Menu.all.map { |m| [m.title, m.id] }),{ class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :max_people, class: "col-sm-2 control-label" %>
    <div class="col-sm-7">
      <%= f.number_field :max_people, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :min_people, class: "col-sm-2 control-label" %>
    <div class="col-sm-7">
      <%= f.number_field :min_people, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :people_min_price, class: "col-sm-2 control-label" %>
    <div class="col-sm-7">
      <%= f.number_field :people_min_price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :max_price, class: "col-sm-2 control-label" %>
    <div class="col-sm-7">
      <%= f.text_field :max_price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :min_price, class: "col-sm-2 control-label" %>
    <div class="col-sm-7">
      <%= f.text_field :min_price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :actual_price, class: "col-sm-2 control-label" %>
    <div class="col-sm-7">
      <%= f.text_field :actual_price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
    <%= f.fields_for :photos do |ff| %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.file_field :image, class: "" %>
        </div>
      </div>
    <% end %>
<% end %>
