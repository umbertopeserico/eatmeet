<% content_for(:page_header) do %>
  <h1>
    Menus
    <%= link_to new_administrator_menu_path, class: 'btn btn-primary pull-right' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Aggiungi
    <% end %>
  </h1>
<% end %>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Html menu</th>
            <th>Max price</th>
            <th>Min price</th>
            <th>Restaurant</th>
            <th class="action-column"></th>
        <th class="action-column"></th>
        <th class="action-column"></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @menus) do |menu| %>
            <td><%= menu.title %></td>
            <td><%= menu.html_menu %></td>
            <td><%= menu.max_price %></td>
            <td><%= menu.min_price %></td>
            <td><%= menu.restaurant_id %></td>
            <td><%= link_to 'Show', administrator_menu_path(menu) %></td>
        <td><%= link_to 'Edit', edit_administrator_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', administrator_menu_path(menu), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
