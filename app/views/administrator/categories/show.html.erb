<% content_for(:page_header) do %>
<h1>
  <%= link_to administrator_categories_path, class: 'btn btn-default pull-right' do %>
  <span class="glyphicon glyphicon-list-alt"></span>
  Back
  <% end %>
  <%= link_to edit_administrator_category_path(@category), class: 'btn btn-primary pull-right' do %>
  <span class="glyphicon glyphicon-pencil"></span>
  Edit
  <% end %>
  <h1>Show category</h1>
</h1>
<% end %>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @category.name %></dd>

  <dt>Image:</dt>
  <dd><%= @category.image %></dd>

</dl>
