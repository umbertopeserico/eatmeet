<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Schedule</th>
      <th>Max people</th>
      <th>Min people</th>
      <th>People min price</th>
      <th>Max price</th>
      <th>Min price</th>
      <th>Actual price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.schedule %></td>
        <td><%= event.max_people %></td>
        <td><%= event.min_people %></td>
        <td><%= event.people_min_price %></td>
        <td><%= event.max_price %></td>
        <td><%= event.min_price %></td>
        <td><%= event.actual_price %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

